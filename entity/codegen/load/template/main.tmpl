// 序列化用户的package中的entity,
// 把[entity.EntityInterface]中的方法的返回值都序列化到Entity中
//
// 参数:
//
//	di: 数据库接口
//	de: 数据库中的entity
func Marshal(di entity.DbInterface,name string, de EntityMap) (b []byte, err error) {
	config := di.Config()
	if config.Tag == "" {
		return nil, fmt.Errorf("taurus_go/entity %q: missing pool name.", reflect.TypeOf(di).Elem().Name())
	}
	if config.Type == "" || (config.Type != dialect.PostgreSQL) {
		return nil, fmt.Errorf("taurus_go/entity %q: missing database type '%s', please make sure the entity.DbConfig.Type is correct.", reflect.TypeOf(di).Elem().Name(),config.Type)
	}
	if config.Name == "" {
		config.Name = name
	}
	database := &Database{
		Name: config.Name,
		Tag:     config.Tag,
		Type:  	  config.Type,
		EntityMap: map[string]string{},
		Entities: 	map[string]*Entity{},
	}
	for key, entityName := range de {
		e := entities[entityName]
		db = database
		entity, err := MarshalEntity( e)
		if err != nil {
			return nil, err
		}
		database.EntityMap[key] = entityName
		database.Entities[entityName] = entity
	}


	return json.Marshal(database)
}



